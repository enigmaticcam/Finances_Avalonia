<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Background="{DynamicResource PrimaryBackground}"
             Foreground="{DynamicResource PrimaryForeground}"
             x:Class="Finances_Avalonia.Views.Options.OptionsView">
  <StackPanel Spacing="15" Margin="15">
	  <Label Classes="h2" Content="Options" />
      <Button Command="{Binding RefreshCacheCommand}">
		  <StackPanel Orientation="Horizontal">
			  <Image Source="{SvgImage /Assets/Refresh.svg}" Width="30" />
              <TextBlock Classes="IconButton">Refresh Cache</TextBlock>
          </StackPanel>
      </Button>
      <TextBlock IsVisible="{Binding IsExecuting}" >Executing...</TextBlock>
  </StackPanel>
</UserControl>
